# Copy this to .env and fill in your values
TELEGRAM_BOT_TOKEN=your_bot_token_here
# Omit DATABASE_URL to use SQLite (parkwatch.db) for local development
DATABASE_URL=postgresql://user:password@localhost:5432/parkwatch
SIGHTING_RETENTION_DAYS=30
FEEDBACK_WINDOW_HOURS=24

# --- Phase 7: Production Infrastructure ---

# Webhook mode: set to your public URL to switch from polling to webhook
# WEBHOOK_URL=https://myapp.up.railway.app
# PORT=8443

# Health check endpoint (GET /health on this port)
# HEALTH_CHECK_ENABLED=true
# HEALTH_CHECK_PORT=8080

# Structured logging: "text" (default) or "json" (for log aggregation)
# LOG_FORMAT=json

# Sentry error tracking: set DSN to enable
# SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0

# --- Phase 8: Admin Foundation ---

# Admin authentication: comma-separated Telegram user IDs authorized as admins
# ADMIN_USER_IDS=123456789,987654321

# --- Phase 9: User Management & Moderation ---

# Maximum warnings before auto-ban (set to 0 to disable auto-ban)
# MAX_WARNINGS=3
